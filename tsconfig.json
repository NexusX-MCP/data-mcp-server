{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@data/sdk": ["./node_modules/@data/sdk"],
      "@modelcontextprotocol/sdk": ["./node_modules/@modelcontextprotocol/sdk"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/resources/static/data/summarized.json"
  ],
  "exclude": [
    "node_modules",
    "src/resources/dynamic/**"
  ]
}